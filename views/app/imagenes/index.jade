extends ../../layout.jade
block contenido
	div(class="container")
		h1 Mis Imagenes
		br
		for imagen in imagenes
			.white.border.tr.large-padding
				.row
					.col-md-10
						h2=imagen.title
					.col-md.2
						a(href="/app/imagenes/#{imagen._id}/edit" class="right-space") Editar
						form(action="/app/imagenes/#{imagen._id}?_method=delete" class="link" method="POST" enctype="multipart/form-data")
							input(type="submit" value="Eliminar" )
						