extends moduls/struct.jade

block libs
	link(rel="stylesheet" type="text/css" href="../estatico/css/moduls/miniature_card.css")

block content
	-function miniature_color_priority(priority){
	-		var color="";
	-		if(priority == 3)color="background:#008;color:#FFF;";
	-		else if(priority == 2)color="background:#F00;color:#FFF;";
	-		else if(priority == 1)color="background:#0095b6;color:#FFF;";
	-		else color="background:#FFF;color:#006;";
	- 		return color};

	div.section#section_1
		label.title Panel (USUARIOS)
		div.element_content
			if(messages.info)
				.message.success
				center
					span(style='font-size: 2em; color:#32cc32;')= messages.info

			if(messages.testin)
				.message.success
				center
					span(style='font-size: 1.3em; color:#32cc32;')= messages.testin

			label.title_2 Gestion de usuarios:
			div.elements
				for usuario in usuarios
					form(action="/panel_administrador/perfilusuario"  method="get")
						input(type="text",name="id",value="#{usuario._id}" hidden )
						div(style=miniature_color_priority(1)).card_task
							div.custom_card
							div.title_card: span.title_2 #{usuario.username}
							div.button_content
								button Abrir
