extends moduls/struct.jade
block content
 html(lan='es')
  head
   title ECOCARDS
   meta(charset='utf-8')
   meta(name='viewport', content='width=device-width, initial-scale=1.0')
   link(rel='stylesheet', type='text/css', href='../estatico/bootstrap/css/bootstrap.min.css')
   link(rel='stylesheet', type='text/css', href='../estatico/css/moduls/controllers.css')
   link(rel='stylesheet', type='text/css', href='../estatico/css/moduls/menu.css')
  body

   form(action='creaciontarjeta', method='post',id="tarjeta")
    .window
     .content
      .header
      #section_1.section
       if(messages.info)
        .message.success
        center
         span(style='font-size: 2em; color:#32cc32;')= messages.info
       label.title Desarrollador
       .list_content
       .element_content
        .input_content
         input(type='number', placeholder='Duracion(Horas)',name="horasduracion")
         input(type='number', placeholder='Plazo(Dias)',name="plazodias")
        .input_content
         label() Tiempo maximo
         input(type='date', placeholder='Fecha',name="plazo")
        .input_content
         label() Dia de inicio 
         input(type='date', placeholder='Fecha',name="diainicio")
        .input_content        
         label() responsable 
         select(name="responsable")
          for user in Users
           option(value="#{user._id}") #{user.username} 
        .input_content
         label() proyecto 
         select(name="proyecto")
          for proyecto in proyectos
           option(value="#{proyecto._id}") #{proyecto.nombre}       
        .input_content
         label() color 
         select(name="color")
          option(value="roja") roja
          option(value="naranja") naranja
          option(value="blanca") blanca
          
        .input_content
         label() tester 
         select(name="tester")
          for user in Users
           option(value="#{user._id}") #{user.username}      
        .input_content
         label() tipotarea 
         select(name="tipotarea")
          for tipotare in tipotarea
           option(value="#{tipotare._id}") #{tipotare.nombre}    
        .element_content
 
        .description_content
         label.title_2 Descripcion de la tarjeta:
         textarea(placeholder='Has click para escribir',name="descripcion")
      
      .button_content.end
       button Crear
    script(src='../estatico/bootstrap/js/jquery.js')
    script(src='../estatico/bootstrap/js/bootstrap.min.js')
block libs_js