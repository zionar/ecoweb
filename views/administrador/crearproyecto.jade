extends moduls/struct.jade
block content
 div
  h1 CREACION DE PROYECTO
 div(class="col-md-6 remove-float center-block medio-top-space")
  form(action="creacionproyecto",method="POST")
   if(messages.info)
        .message.success
        center
         span(style='font-size: 2em; color:#32cc32;')= messages.info
   div(class="fomr-group")
    label(for="text") Nombre proyecto
    input(type="text",name="nombre",placeholder="nombre",id="nombre",class="form-control")
   div
    label(for="text") fechaentrega
    input(type="date",name="fechaentrega",placeholder="fechaentrega",id="fechaentrega",class="form-control")  
   div
    label(for="text") cliente
    input(type="text",name="cliente",placeholder="cliente",id="cliente",class="form-control")
   div
    .description_content
     label.title_2 Descripcion:
     textarea(placeholder='Has click para escribir',name="descripcion")
    .button_content.end
     button Crear